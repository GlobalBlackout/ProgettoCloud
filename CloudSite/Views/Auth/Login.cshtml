<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>
    <div>
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            <p>Email:<br></p>
            <input type="text" name="UserEmailForLogin"><br><br>
            <p>Password:<br></p>
            <input type="password" name="UserPasswordForLogin"><br><br>
            <input type="submit" value="Login" class="submit">
        }
    </div>
</body>
</html>
