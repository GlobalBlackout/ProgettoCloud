@using CloudSite.Models.Photos
@model List<Photo>

<br />
<div class="container">
    <div class="col-md-1">
        <h2>Gallery</h2>
    </div>
    <div class="col-md-offset-8">
        @Html.ActionLink("Multiple delete", "GalleryDelete", "Gallery")
    </div>
</div>
<br />
<br />

<div class="container">
    <div>
        @using (Html.BeginForm("GalleryTag", "Gallery", FormMethod.Get))
        {
            <input type="text" name="tag" /><br /><br />
            <input type="submit" value="Search tag" />
            <br /><br />
        }
    </div>

    @foreach (Photo photo in Model)
    {
        <div class="col-md-3">
            <a href="@Url.Action("SinglePhoto", "Photo", new { photoId = photo._id.ToString() })">
                <img src="@photo.PhotoPhatWhitSasKey">
            </a>
        </div>
    }
</div>

